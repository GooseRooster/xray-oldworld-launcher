{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Tauri Dev (Debug)",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=${workspaceFolder}/xray-oldworld-launcher/src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      "env": {
        "OWL_GAME_ROOT": "${workspaceFolder}/xray-oldworld-launcher/dev-gameroot"     
       },
      "preLaunchTask": "dotnet-watch",
      "postDebugTask": "kill-dotnet-watch"
    }
  ]
}
