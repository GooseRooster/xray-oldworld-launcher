{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xray-oldworld-launcher",
  "version": "0.1.0",
  "identifier": "com.gooze.xray-oldworld-launcher",
  "build": {
    "beforeDevCommand": "dotnet watch run --project src/XrayOldworldLauncher.csproj",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "dotnet publish -c release src/XrayOldworldLauncher.csproj -o dist",
    "frontendDist": "../dist/wwwroot"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Old World Launcher",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
