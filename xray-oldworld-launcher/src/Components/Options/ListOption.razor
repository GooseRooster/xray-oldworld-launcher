@using XrayOldworldLauncher.Models.Options
@using XrayOldworldLauncher.Services
@inject LocalizationService Loc

<MudSelect T="string"
           Value="@Value"
           ValueChanged="OnValueChanged"
           Label="@Loc.T($"opt.{Definition.Id}")"
           Variant="Variant.Outlined"
           Dense="true"
           Margin="Margin.Dense"
           Class="mb-2">
    @if (Definition.Content != null)
    {
        @foreach (var item in Definition.Content)
        {
            <MudSelectItem Value="@item">@Loc.ContentText(Definition.Id, item)</MudSelectItem>
        }
    }
</MudSelect>
@{ var desc = Loc.TryGet($"opt.{Definition.Id}.desc"); }
@if (desc != null)
{
    <MudText Typo="Typo.caption" Class="mt-n1 mb-2" Style="color: var(--mud-palette-text-secondary);">@desc</MudText>
}

@code {
    [CascadingParameter(Name = "Language")] public string? Language { get; set; }
    [Parameter] public OptionDefinition Definition { get; set; } = null!;
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public EventCallback<string> ValueChanged { get; set; }

    private async Task OnValueChanged(string newValue)
    {
        await ValueChanged.InvokeAsync(newValue);
    }
}
